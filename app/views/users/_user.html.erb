<div class="user">
  <div class="avatar"><a href=<%="/#{user.name}"%>>
    <%= get_avatar_of user, 20 %>
  </a></div>
  <%= link_to "#{user.name}", "/#{user.name}" %>
  <% if !user.full_name.nil? %>
    <span><%= "(#{user.full_name})" %></span>
  <% end %>
  <% if !current_user.nil? && !current_user?(user) %>
    <div id="follow_form">
      <% if current_user.following?(user) %>
        <%= render template: 'users/_unfollow', locals: { user: user } %>
      <% else %>
        <%= render template: 'users/_follow', locals: { user: user } %>
      <% end %>
    </div>
  <% end %>
  <div class="stretch"></div>
</div>
