<div id="user_head">
  <div class="avatar">
    <span class="tip" title="Change your avatar at gravatar.com">
      <a href="http://gravatar.com/emails/">
        <%= get_avatar_of @user, 48 %>
      </a>
    </span>
    <span id="user_nickname"><%= @user.name %></span>
    <% unless @user.full_name.nil? %>
      <span id="user_name"><%= "(#{@user.full_name})" %></span>
    <% end %>
    <% unless current_user?(@user) %>
      <div id="follow_form">
      <% if current_user.following?(@user) %>
        <%= render partial: 'unfollow' %>
      <% else %>
        <%= render partial: 'follow' %>
      <% end %>
      </div>
    <% end %>
    <div class="stretch"></div>
  </div>
</div>
