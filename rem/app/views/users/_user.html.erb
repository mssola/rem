<div class="_route">
  <div class="avatar"><a href="/">
    <%= get_avatar_of user, 20 %>
  </a></div>
  <%= link_to "#{user.name}", "/#{user.name}" %>
  <span><%= "(#{user.full_name})" %></span>
  <% unless current_user?(@user) %>
    <div id="follow_form">
      <% if current_user.following?(@user) %>
        <%= render partial: 'unfollow' %>
      <% else %>
        <%= render partial: 'follow' %>
      <% end %>
    </div>
  <% end %>
</div>
