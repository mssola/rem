<div id="account_page">
  <ul id="account_tabs" >
    <li><a href="account">Public Profile</a></li>
    <li><a href="account/admin">Account Admin</a></li>
    <li><a href="account/notification">Notifications</a></li>
  </ul>
  <% present current_user do |up| %>
    <fieldset id="user_bucket">
      <%= form_tag account_path, :method => 'PUT' do %>
        <div class="present full">
          <%= r_label :full, 'Full name' %>
          <%= r_field :text, :full, nil, up.full_name %>
        </div>
        <div class="present email">
          <%= r_label :email, 'Email' %>
          <span id="email_adv">(email will not be publicly displayed)</span>
          <%= r_field :text, 'email', nil, up.email %>
        </div>
        <div class="present location">
          <%= r_label :location, 'Location' %>
          <%= r_field :text, :location, nil, up.location %>
        </div>
        <div class="present website">
          <%= r_label :site, 'Website' %>
          <%= r_field :text, :website, nil, up.website %>
        </div>
        <div class="present twitter">
          <%= r_label :twitter, 'Twitter account' %>
          <%= r_field :text, :twitter, nil, up.twitter %>
        </div>
        <%= r_submit 'Update information' %>
      <% end %>
    </fieldset>
    <fieldset id="admin_bucket" type="hidden">
      <div class="admin password">
        <%= r_label :password, 'Password reset' %>
        <% if up.email.empty? %>
          Apparently you have no email address configured.
        <% else %>
          <%= form_tag password_resets_path, :method => :post do %>
            <%= r_submit "Reset Password" %>
          <% end %>
        <% end %>
        <br>
        <%= r_label :delete, 'Delete Account' %>
        <%= button_to 'Delete Account', user_path(current_user.id), method: :delete, class: 'r_submit' %>
        <br>
        <br>
        <%= r_label :label_username, 'Change username' %>
        <%= r_field :text, :change_username, up.name %>
      </div>
    </fieldset>
    <fieldset id="notification_bucket" type="hidden">
      <div class="notification">
        <% if up.email.empty? %>
          Apparently you have no email address configured.
        <% else %>
          <%= r_label :note, 'Aqui hi ha els mailers' %>
        <% end %>
    </fieldset>
  <% end %>
</div>